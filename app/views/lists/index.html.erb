<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://as2.ftcdn.net/v2/jpg/04/04/87/39/1000_F_404873968_1EjhQM3nja9YCEkzsDYmd6an9jJJ9hy0.jpg);">
  <div class="container">
    <h1>My Films lists🎞️</h1>

  </div>
</div>

<div class="container">
  <div class="row">
      <% @lists.each do |list| %>
      <div class="col-4 text-center p-0">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
      <% end %>
      <div class="col-4">
        <div class="card-category">
          <%= link_to "+ Add a new List", new_list_path %>
        </div>
      </div>


  </div>

</div>
