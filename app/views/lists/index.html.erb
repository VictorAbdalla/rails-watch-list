
<div class="container">
  <h1 class='text-center'>My Lists</h1>
  <div class="row">
      <% @lists.each do |list| %>
      <div class="col-4 text-center">
        <div class="card-category">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
      <% end %>
      <div class="col-4">
        <div class="card-category">
          <%= link_to "+ Add a new List", new_list_path %>
        </div>
      </div>


  </div>

</div>
