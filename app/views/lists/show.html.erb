<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li ><%= bookmark.movie.title %> <%= bookmark.comment %>
    <%= link_to 'Delete movie', bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Go back to all lists", lists_path %>
<%= link_to "Add a new movie", new_list_bookmark_path(@list) %>
